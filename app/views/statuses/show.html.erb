<div class="row">
  <div class="large-8 columns">

		<div class="row">
			<p id="notice"><%= notice %></p>
		</div>
		<div class="row">
			<h3>Status Details</h3>
			<div class="callout panel" data-equalizer-watch="" style="height: auto;">
				<p>
				  <strong>By:</strong> <%= @status.user.full_name %>
				</p>
				<p>
				  <strong>Content:</strong> <%= @status.content %>
				</p>
			</div>
		</div>
		<div class="row">
			<ul class="button-group radius">
				<li><%= link_to 'Edit', edit_status_path(@status), class: "button alert tiny" %></li>
				<li><%= link_to 'Back', statuses_path, class: "button secondary tiny" %></li>
			</ul>
		</div>	
	</div>
</div>


