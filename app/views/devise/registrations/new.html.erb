<div class="large-8 columns signup">
  <nav class="tab-bar">
    <section class="left-small">
      <i class="fa fa-user fa-5"></i>
    </section>
    <section class="middle tab-bar-section">
      <h1 class="title">Sign up</h1>
    </section>
  </nav>

  <div class="panel callout radius">
    <div class="row">
      <div class="large-12 columns">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input_field :first_name, as: :string, placeholder: "First name", required: true, autofocus: true %>
            <%= f.input_field :last_name, as: :string, placeholder: "Last name", required: true %>
            <%= f.input_field :profile_name, as: :string, placeholder: "Profile name",required: true %>
            <%= f.input_field :email, as: :email, placeholder: "Email",required: true %>
            <%= f.input_field :password, as: :password, placeholder: "Password", required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
            <%= f.input_field :password_confirmation, as: :password, placeholder: "Password Confirmation",required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "button round" %>
          </div>
        <% end %>    
      </div>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>