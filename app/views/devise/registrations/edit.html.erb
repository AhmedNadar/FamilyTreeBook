<h2>Settings <%#= resource_name.to_s.humanize %></h2>
<div class="pricing-table large-8 medium-7" data-equalizer-watch="" style="height:100%; padding:15px;">
  <div class="row">
    <div class="large-12 columns">
      <h3>Profile</h3>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input_field :first_name, as: :string, placeholder: "First name", required: true, autofocus: true %>
          <%= f.input_field :last_name, as: :string, placeholder: "Last name", required: true %>
          <%= f.input_field :profile_name, as: :string, placeholder: "Profile name",required: true %>
          <%= f.input_field :email, as: :email, placeholder: "Email",required: true %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <%= f.input_field :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", placeholder: "Password",required: false %>
          <%= f.input_field :password_confirmation, placeholder: "Password Confirmation",required: false %>
          <%= f.input_field :current_password, hint: "we need your current password to confirm your changes", placeholder: "Current Password",required: true %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Update", class: "button round" %>
        </div>
      <% end %>
    </div>
  </div>  
  <h3>Cancel my account</h3>
  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  <%= link_to "Back", :back %>
</div>

